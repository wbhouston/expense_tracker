.p-8
  h2 New Transaction Import

  = simple_form_for @transaction_import_form, url: transaction_imports_path do |form|
    .space-y-4.mt-8.max-w-md
      = form.input(\
        :name,
        input_html: {\
          class: 'rounded border border-gray-300',
        },
        wrapper: :expense_input,
      )

      = form.input(\
        :import_csv,
        as: :file,
        input_html: { accept: 'text/csv' },
        wrapper: :expense_input,
      )

      = form.submit(\
        'Create',
        class: 'bg-green-700 text-white px-2 py-1 rounded hover:bg-green-500 hover:cursor-pointer',
      )
